pipeline {
    agent {
        docker {
            image 'node:20-bullseye'
            args '--user 0:0'
        }
    }
    parameters {
        string(name: 'SOURCE_DIR', defaultValue: '', description: 'Path to JS project directory')
    }
    stages {
        stage('Run JS Tests') {
            steps {
                script {
                    if (fileExists(params.SOURCE_DIR)) {
                        echo "üîç Running JS tests in ${params.SOURCE_DIR}"
                        dir(params.SOURCE_DIR) {
                            // Fast install & ignore audit/errors
                            sh 'npm ci --prefer-offline --no-audit --progress=false || true'
                            def result = sh(
                                script: 'npm test',
                                returnStatus: true
                            )
                            if (result != 0) {
                                echo "‚ö†Ô∏è JS tests failed in ${params.SOURCE_DIR}"
                            } else {
                                echo "‚úÖ JS tests passed cleanly for ${params.SOURCE_DIR}"
                            }
                        }
                    } else {
                        echo "‚ùå JS tests skipped: directory '${params.SOURCE_DIR}' not found"
                    }
                }
            }
        }
    }
}
